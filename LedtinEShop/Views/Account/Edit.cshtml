@model Customer
@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>
@Html.ValidationSummary(true)
@using (Html.BeginForm("Edit", "Account",
                            FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = true })
    </div>
    @Html.HiddenFor(m => m.Password)
    <div class="form-group">
        <label>Fullname</label>
        @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email Address</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Photo</label>
        <input type="file" name="UpPhoto" class="form-control" />
        @Html.HiddenFor(m => m.Photo)
        <img src="~/images/customers/@Model.Photo"
             style="width:100px;height:150px;" />
    </div>
    @Html.HiddenFor(m => m.Activated)
    <div class="form-group">
        <button class="btn btn-primary">
            <span class="glyphicon glyphicon-save"></span>
            Update
        </button>
    </div>
}

